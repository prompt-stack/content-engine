# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production
API_PORT=8765

# Database (Neon)
POSTGRES_PORT=5433
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/content_engine
# For production, use your Neon connection string:
# DATABASE_URL=postgresql+asyncpg://user:password@ep-example-123456.us-east-1.aws.neon.tech/content_engine?sslmode=require

# Redis
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380/0

# Authentication
JWT_SECRET=your-jwt-secret-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# LLM Providers (Optional - leave empty for demo mode)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
DEEPSEEK_API_KEY=

# Google Gmail API (for newsletter extraction)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Rate Limiting
RATE_LIMIT_FREE=100
RATE_LIMIT_STARTER=1000
RATE_LIMIT_PRO=10000
RATE_LIMIT_BUSINESS=50000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Feature Flags
ENABLE_BETTING_EXTRACTOR=false
ENABLE_EMAIL_EXTRACTOR=true